<header class="site-header">
  <div class="site-header__container">
    <span class="site-header__logo-container">
      <a class="site-header__logo" href="{{ '/' | url }}" aria-label="Logo">
        {{ global.logo | svg | safe }}
      </a>
    </span>
    <button
      class="site-header__mobile-nav"
      data-drawer-trigger=""
      aria-controls="drawer-name"
      aria-expanded="false"
    >
      <span class="site-header__mobile-nav-label">Menu</span>
      {{ global.menu_icon | svg | safe }}
    </button>
    <nav class="site-header__nav">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="site-header__items">
        {%- for entry in navPages %}
          <li class="site-header__item">
            <a
              class="site-header__link"
              href="{{ entry.url | url }}"
              {% if entry.url == page.url %} aria-current data-current="current item"{% endif %}
            >
              {{ entry.title }}
            </a>
          </li>
        {%- endfor %}

        {# Add new nav items here #}
          <li class="site-header__item">
            <a class="site-header__link" href="https://binarydigit.omg.lol" target="_blank"><i class="fa-solid fa-heart fa-lg"></i></a>
          </li>

          <li class="site-header__item">
            <a class="site-header__link" href="https://ko-fi.com/binarydigit" target="_blank"><i class="fa-solid fa-mug-saucer fa-lg"></i>
            </a>
          </li>
          
          <li class="site-header__item">
            <a class="site-header__link" href="/feed.xml" target="_blank"><i class="fa-solid fa-rss fa-lg"></i>
            </a>
          </li>


        {% if global.enable_theme_switch %}
          <li class="site-header__item">
            <div class="site-header__link site-header__link--theme-switch" data-theme-switch>
              {{ global.switch_theme_icon | svg | safe }}
            </div>
          </li>
        {% endif %}

      </ul>
    </nav>
  </div>
</header>
